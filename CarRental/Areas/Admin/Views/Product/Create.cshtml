@model CarRental.Models.Car

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div id="main">
    <header class="mb-3">
        <a href="#" class="burger-btn d-block d-xl-none">
            <i class="bi bi-justify fs-3"></i>
        </a>
    </header>

    <div class="page-heading">
        <div class="page-title">
            <div class="row">
                <div class="col-12 col-md-6 order-md-1 order-last">
                    <h3>Thêm mới</h3>
                    @* <p class="text-subtitle text-muted">
                        Give textual form controls like input upgrade with
                        custom styles,
                        sizing, focus states, and more.
                    </p> *@
                </div>
                <div class="col-12 col-md-6 order-md-2 order-first">
                    <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Input</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
        <section class="section">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Thêm mới xe</h4>
                </div>

                <div class="card-body">
                    <div class="row">
                        <div class="col-md">
                            <form method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="form-group">
                                    <label asp-for="CarName">Tên xe</label>
                                    <input asp-for="CarName" type="text" class="form-control" id="basicInput"
                                           placeholder="Nhập tên xe">
                                    <span asp-validation-for="CarName" class="text-danger"></span>

                                </div>
                                <div class="form-group">
                                    <label asp-for="Type">Dòng xe</label>
                                    <select asp-items="ViewBag.carType" class="form-select" id="basicSelect">
                                        <option selected></option>
                                    </select>
                                    
                                    <span asp-validation-for="Type" class="text-danger"></span>

                                </div>
                                <div class="form-group">
                                    <label asp-for="LicensePlate">Biển số</label>
                                    <input asp-for="LicensePlate" type="text" class="form-control" id="basicInput"
                                           placeholder="Nhập biển số xe">
                                    <span asp-validation-for="LicensePlate" class="text-danger"></span>

                                </div>
                                <div class="form-group">
                                    <label asp-for="Color">Màu xe</label>
                                    <input asp-for="Color" type="text" class="form-control" id="basicInput"
                                           placeholder="Nhập màu xe">
                                    <span asp-validation-for="Color" class="text-danger"></span>

                                </div>
                                <div class="form-group">
                                    <label asp-for="Model">Năm</label>
                                    <input asp-for="Model" type="text" class="form-control" id="basicInput"
                                           placeholder="Nhập model">
                                    <span asp-validation-for="Model" class="text-danger"></span>

                                </div>
                                <div class="form-group">
                                    <label asp-for="CarBrand">Hãng xe</label>
                                    <input asp-for="CarBrand" type="text" class="form-control" id="basicInput"
                                           placeholder="Nhập tên hãng xe">
                                    <span asp-validation-for="CarBrand" class="text-danger"></span>

                                </div>
                                <div class="form-group">
                                    <label asp-for="Price">Giá xe</label>
                                    <input asp-for="Price" type="text" class="form-control" id="basicInput"
                                           placeholder="Nhập giá xe">
                                    <span asp-validation-for="Price" class="text-danger"></span>

                                </div>
                                <div class="form-group">
                                    <label asp-for="SalePrice">Giá giảm</label>
                                    <input asp-for="SalePrice" type="text" class="form-control" id="basicInput"
                                           placeholder="Nhập giá giảm">
                                    <span asp-validation-for="SalePrice" class="text-danger"></span>

                                </div>
                                <div class="form-group">
                                    <label asp-for="Image">Ảnh</label>
                                    <div class="input-group mb-3">
                                        <button class="btn btn-primary" type="button" onclick="openDialog()"
                                                id="button-addon1">
                                            Chọn ảnh
                                        </button>
                                        <input asp-for="Image" type="text" class="form-control" id="file_input" 
                                               aria-label="Example text with button addon"
                                               aria-describedby="button-addon1">
                                    </div>
                                    <span asp-validation-for="Image" class="text-danger"></span>

                                </div>
                              

                                
                                <div class="form-group">
                                    <label asp-for="Descriptions">Mô tả</label>
                                    <input asp-for="Descriptions" type="text" class="form-control" id="basicInput"
                                           placeholder="Nhập mô tả">
                                    <span asp-validation-for="Descriptions" class="text-danger"></span>

                                </div>
                                <div class="form-group">
                                    <label asp-for="Rate">Sao</label>
                                    <input asp-for="Rate" type="text" class="form-control" id="basicInput"
                                           placeholder="Nhập số sao">
                                    <span asp-validation-for="Rate" class="text-danger"></span>

                                </div>
                                <div class="form-group">
                                    @* <label asp-for="Details">Chi tiết</label> *@
                                    @* <input asp-for="CarBrand" type="text" class="form-control" id="basicInput"
                                           placeholder="Nhập tên hãng xe"> *@
                                    <label asp-for="Details" for="exampleFormControlTextarea1" class="form-label">
                                        Chi tiết
                                    </label>
                                    <textarea asp-for="Details" type="text" class="form-control"></textarea>

                                    <span asp-validation-for="Details" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="IsActive" class="control-label">
                                        @Html.CheckBox("IsActive", false)
                                        Hiển thị
                                    </label>

                                    <span asp-validation-for="IsActive" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="IsSale" class="control-label">
                                        @Html.CheckBox("IsActive", false)
                                       sản phẩm sale
                                    </label>

                                    <span asp-validation-for="IsActive" class="text-danger"></span>
                                </div>
                                <div class="btn-group mb-3">
                                    <div class="form-group">
                                        <input type="submit" value="Create" class="btn btn-primary" />
                                    </div>|
                                    <div class="form-group">
                                        <a asp-action="Index" class="btn btn-danger">Quay lại</a>

                                    </div>
                                </div>
                              
                            </form>

                            
                        </div>
                        
                    </div>
                </div>
            </div>
        </section>

        

    </div>

    <footer>
        <div class="footer clearfix mb-0 text-muted">
            <div class="float-start">
                <p>2021 &copy; Mazer</p>
            </div>
            <div class="float-end">
                <p>
                    Crafted with <span class="text-danger"><i class="bi bi-heart"></i></span> by <a href="http://ahmadsaugi.com">A. Saugi</a>
                </p>
            </div>
        </div>
    </footer>
</div>
