@using CarRental.Models;
@model IList<Menu>
@{

    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<!-- Content wrapper scroll start -->
<div class="content-wrapper-scroll">

    <!-- Main header starts -->
    <div class="main-header d-flex align-items-center justify-content-between position-relative">
        <div class="d-flex align-items-center justify-content-center">
            <div class="page-icon pe-3">
                <i class="bi bi-window-split"></i>
            </div>
            <div class="page-title d-none d-md-block">
                <h5>QUẢN LÍ MENU</h5>
            </div>
        </div>
        <!-- Live updates start -->
        <ul class="updates d-flex align-items-end flex-column overflow-hidden" id="updates">
            <li>
                <a href="javascript:void(0)">
                    <i class="bi bi-envelope-paper text-red font-1x me-2"></i>
                    <span>12 emails from David Michaiah.</span>
                </a>
            </li>
            <li>
                <a href="javascript:void(0)">
                    <i class="bi bi-bar-chart text-blue font-1x me-2"></i>
                    <span>15 new features updated successfully.</span>
                </a>
            </li>
            <li>
                <a href="javascript:void(0)">
                    <i class="bi bi-folder-check text-yellow font-1x me-2"></i>
                    <span>The media folder is created successfully.</span>
                </a>
            </li>
        </ul>
        <!-- Live updates end -->
    </div>
    <!-- Main header ends -->
    <!-- Content wrapper start -->
    <div class="content-wrapper">

        <!-- Row start -->
        <div class="row gx-3">
            <div class="col-sm-12 col-12">
                <!-- Card start -->
                <div class="card">
                    <div class="card-header">
                        @* <div class="card-title">QUẢN LÍ MENU</div> *@
                        <a asp-area="Admin" asp-controller="Menu" asp-action="Create" class="btn btn-info"><i class="bi bi-plus-square"></i>Thêm mới</a>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="highlightRowColumn" class="table custom-table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Tiêu đề</th>
                                        <th>Mức</th>
                                        <th>Vi trí</th>

                                        <th>Hiện</th>
                                        <th>Chức năng</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {

                                        <tr>
                                            <td>@item.MenuId</td>
                                            <td>@item.Title</td>
                                            <td>@item.Levels</td>
                                            <td>@item.Position</td>
                                            <td>@item.IsActive</td>
                                            <td>
                                                <a asp-area="Admin" asp-controller="Menu" asp-action="Edit" asp-route-id="@item.MenuId" class="btn btn-info">Sửa</a>
                                                <a asp-area="Admin" asp-controller="Menu" asp-action="Delete" asp-route-id="@item.MenuId" class="btn btn-danger">Xoá</a>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- Card end -->
                <!-- Card end -->
            </div>
        </div>
        <!-- Row end -->

    </div>
    <!-- Content wrapper end -->

</div>
<!-- Content wrapper scroll end -->