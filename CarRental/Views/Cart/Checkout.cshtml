@section scripts {

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
            $(document).ready(function () {


             // Lấy giá trị từ checkbox
             var paymentMethod = $("#ship-box").is(":checked") ? "Thanh toán COD" : "Thanh toán VNPay";

            $("#checkoutForm").submit(function (e) {
                e.preventDefault(); // Ngăn chặn submit form mặc định

                var formData = {
                    Notes: $("#notes").val(),
                    paymentmethod: paymentMethod // Thêm giá trị payment vào dữ liệu gửi
                };

                $.ajax({
                    url: '/Cart/Checkout', // Đường dẫn đến action
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(formData),
                    success: function (response) {
                        if (response.success) {
                            // Chuyển hướng đến URL được trả về
                            window.location.href = response.redirectUrl;
                        } else {
                            alert(response.message); // Hiển thị lỗi nếu có
                        }
                    },
                    error: function () {
                        alert("Có lỗi xảy ra. Vui lòng thử lại.");
                    }
                });
            });
        });

    </script>

}